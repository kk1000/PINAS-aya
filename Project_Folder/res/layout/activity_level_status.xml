<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LevelStatusActivity" >

    <TextView
        android:id="@+id/txt_lvlStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lbl_lvlStatusTitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/img_lvlStage2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage1"
        android:layout_toRightOf="@+id/img_lvlStage1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage3"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage2"
        android:layout_toRightOf="@+id/img_lvlStage2"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage4"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage3"
        android:layout_toRightOf="@+id/img_lvlStage3"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage5"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage4"
        android:layout_toRightOf="@+id/img_lvlStage4"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage6"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/img_lvlStage1"
        android:layout_below="@+id/img_lvlStage1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage7"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage6"
        android:layout_toRightOf="@+id/img_lvlStage6"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />
    
    <ImageView
        android:id="@+id/img_lvlStage8"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage7"
        android:layout_toRightOf="@+id/img_lvlStage7"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage9"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage8"
        android:layout_toRightOf="@+id/img_lvlStage8"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage10"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage9"
        android:layout_toRightOf="@+id/img_lvlStage9"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage11"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/img_lvlStage6"
        android:layout_below="@+id/img_lvlStage6"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage12"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage11"
        android:layout_toRightOf="@+id/img_lvlStage11"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage13"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage12"
        android:layout_toRightOf="@+id/img_lvlStage12"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage14"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage13"
        android:layout_toRightOf="@+id/img_lvlStage13"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage15"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/img_lvlStage14"
        android:layout_toRightOf="@+id/img_lvlStage14"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/img_lvlStage1"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_lvlStatusTitle"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_lvlStatusLevelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lvlStatusTitle"
        android:layout_centerHorizontal="true"
        android:text="@string/lbl_lvlStatusLevelNumber"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
